{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.js"]
}
